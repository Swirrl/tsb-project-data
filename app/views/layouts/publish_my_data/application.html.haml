!!! 5
%html
  %head
    %title
      = render 'publish_my_data/shared/meta_title'
    = yield :page_description

    = stylesheet_link_tag :application

    = yield :head
    
    = javascript_include_tag :application

    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
  %body
    /[if lt IE 8]
      = render 'publish_my_data/shared/browser_warning'

    = yield :above_header

    -# for sticky footer
    #wrap
      %header
        %nav
          .branding
            = link_to "/" do
              = image_tag "tsb-logo.png", alt: "TSB logo"

          = form_tag '/projects', method: 'get' do
            .form-group
              = text_field_tag :search_string, params[:search_string], :placeholder => 'Enter a project name'
              = submit_tag 'Search'



          -# probably just leave crumbs off - there's only 1 dataset
          =# yield :crumbs

      %main
        = render 'application/nav'

        - if content_for? :header
          %header
            .header-content
              = yield :header

        .container
          = yield

        - if content_for? :formats
          %footer.formats
            .container
              = yield :formats

        - if content_for? :advanced
          %footer.advanced
            .container
              = yield :advanced

        / uncomment for sticky footer
        / #push

    -#Â note: intentionally not in #wrap
    = render "application/footer"
        


    =# render 'publish_my_data/shared/google_analytics'