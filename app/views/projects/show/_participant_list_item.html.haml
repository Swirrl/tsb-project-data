%li
  .project-participant-header
    .project-participant-name
      %div
        - if participant.uri == project.leader.uri
          Lead organisation
        - else
          Participant organisation
      %div
        = link_to resource_path_from_uri(participant.uri) do
          = participant.label

  .project-participant-main
    = render 'application/grant_summary_stack', cost: project.offer_cost_sum_for_organization(participant), max_cost: project.max_offer_cost, grant: project.offer_grant_sum_for_organization(participant), payments: project.payments_to_date_sum_for_organization(participant)

