.search-string
  %label{for: 'search-string'}
    Search Query
    = text_field_tag :search_string, @search.original_search_string

  :javascript
    $(function() {
      $("form#faceted-search #search_string").bind('keyup', $.debounce( 1000, function() {
        $("form#faceted-search").submit();
      }));
    });