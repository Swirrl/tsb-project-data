- content_for :header do
  %h3
    Project
    &raquo;
  %h1
    = project.label

- content_for :advanced do
  = render 'application/advanced_resource_details', resource: project

#project-page
  
  #project-main

    %section#project-about
      
      #project-about-primary
        #project-name
          %div Project name
          %div= project.label
        #project-dates
          %div Dates
          %div= project.duration.start
        #project-status
          %div Status
          %div= project.project_status.label

      #project-about-secondary
        #project-number
          %div Project number
          %div= project.project_number
        #project-budget-area
          %div Budget area
          %div= project.competition.budget_area || "-"

      #project-about-tertiary
        #project-description
          %div Description
          %div
            :markdown
              #{project.description}
    

    %section#project-grant-summary
      %h3 Grant summary

      #project-grant-summary-figures
        #project-total-offer-cost
          %div Total cost
          .fixed
            .pounds &pound;#{number_with_delimiter project.offer_cost_sum.to_i}
            .pence .#{"%.2d" % (project.offer_cost_sum.modulo(1).round(2) * 100).to_i}
        
        #project-total-offer-grant
          %div Total grant
          .fixed
            .pounds &pound;#{number_with_delimiter project.offer_grant_sum.to_i}
            .pence .#{"%.2d" % (project.offer_grant_sum.modulo(1).round(2) * 100).to_i}
          .prog-bar
            .prog-bar-background
              .prog-bar-fill{ style: "width: #{((project.offer_grant_sum.to_f / project.offer_cost_sum) * 100).round}%;"}
          .percent
            #{"%.1f" % ((project.offer_grant_sum.to_f / project.offer_cost_sum) * 100)}%
            of total cost
        
        #project-total-payments
          %div Payments to date
          .fixed
            .pounds &pound;#{number_with_delimiter project.payments_to_date_sum.to_i}
            .pence .#{"%.2d" % (project.payments_to_date_sum.modulo(1).round(2) * 100).to_i}
          .prog-bar
            .prog-bar-background
              .prog-bar-fill{ style: "width: #{((project.payments_to_date_sum.to_f / project.offer_grant_sum) * 100).round}%;"}
          .percent
            #{"%.1f" % ((project.payments_to_date_sum.to_f / project.offer_grant_sum) * 100)}%
            of total grant paid


    %section#project-participants
      %h3 Participants
